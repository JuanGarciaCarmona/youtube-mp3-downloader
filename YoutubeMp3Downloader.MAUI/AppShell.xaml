<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="YoutubeMp3Downloader.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:YoutubeMp3Downloader.MAUI.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Simple">
            <ShellContent ContentTemplate="{DataTemplate views:DownloadSingleMp3Page}" />
        </Tab>
        <Tab Title="About">
            <ShellContent ContentTemplate="{DataTemplate views:AboutPage}" />
        </Tab>
    </TabBar>

</Shell>
